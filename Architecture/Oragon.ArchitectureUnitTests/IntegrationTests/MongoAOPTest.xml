<?xml version="1.0" encoding="utf-8" ?>
<objects
	xmlns="http://www.springframework.net"
	xmlns:wcf="http://www.springframework.net/wcf"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.net/aop"
	xmlns:nv="http://www.springframework.net/nvelocity"
	>

	<object id="MongoDBContextAroundAdvice" type="Oragon.Architecture.AOP.Data.MongoDB.MongoDBContextAroundAdvice, Oragon.Architecture">
		<property name="ConnectionStrings">
			<list element-type="Oragon.Architecture.AOP.Data.MongoDB.MongoDBConnectionString, Oragon.Architecture">
				<object type="Oragon.Architecture.AOP.Data.MongoDB.MongoDBConnectionString, Oragon.Architecture">
					<property name="Key" value="MongoDB01" />
					<property name="ConnectionString" value="mongodb://192.168.56.101" />
					<property name="Database" value="iMusica" />
				</object>
			</list>
		</property>
	</object>

	<object id="TargetPattern" type="Spring.Aop.Support.SdkRegularExpressionMethodPointcut, Spring.Aop">
		<property name="Pattern" value="Oragon.ArchitectureUnitTests.IntegrationTests.*Service" />
	</object>
	<aop:config>
		<aop:advisor pointcut-ref="TargetPattern"			advice-ref="MongoDBContextAroundAdvice" />
	</aop:config>



	<object id="MongoAOPTestService" type="Oragon.ArchitectureUnitTests.IntegrationTests.MongoAOPTestService, Oragon.ArchitectureUnitTests" >
		<property name="ObjectContextKey" value="MongoDB01" />
	</object>



</objects>